generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==========================================
// Auth.js Models
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?   // For credentials login
  phone         String?   // Mobile phone number
  role          String    @default("user") // user, admin

  accounts         Account[]
  sessions         Session[]
  settings         Settings?
  feeds            Feed[]
  keywords         Keyword[]
  articles         Article[]
  companyFavorites CompanyFavorite[]
  searchHistory    SearchHistory[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// Application Models
// ==========================================

// Cached RSS feed data (per-source cache)
model FeedCache {
  id          String   @id
  url         String   @unique
  data        String   // JSON stringified feed data
  etag        String?
  lastFetched DateTime @default(now())
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Pre-computed global news feed (ready to serve instantly)
model GlobalFeedCache {
  id          String   @id @default("global")
  items       String   @db.Text // JSON: Sorted, deduplicated news items
  itemCount   Int      @default(0)
  sourceCount Int      @default(0)
  lastUpdated DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Stored articles for search and history
model Article {
  id           String   @id @default(cuid())
  externalId   String   // Original ID from feed
  url          String   @unique
  title        String
  description  String?
  content      String?  // Full article content if fetched
  author       String?
  imageUrl     String?
  publishedAt  DateTime
  fetchedAt    DateTime @default(now())

  // Source info
  sourceId     String
  sourceName   String
  sourceColor  String?
  sourceType   String

  // For grouping related articles
  titleHash    String?  // Hash of normalized title for grouping

  // User interaction
  isRead       Boolean  @default(false)
  isBookmarked Boolean  @default(false)

  userId       String?
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  keywordMatches KeywordMatch[]

  @@index([publishedAt])
  @@index([sourceId])
  @@index([titleHash])
  @@index([isBookmarked])
  @@index([userId])
}

// User-defined feed sources
model Feed {
  id        String   @id @default(cuid())
  name      String
  url       String
  type      String   // rss, twitter, linkedin, etc.
  category  String?
  color     String?
  enabled   Boolean  @default(true)
  tags      String?  // JSON array of tag IDs
  options   String?  // JSON object for adapter-specific options

  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, url])
}

// Keyword alerts
model Keyword {
  id          String   @id @default(cuid())
  term        String   // The keyword or phrase to watch
  isActive    Boolean  @default(true)
  notifyPush  Boolean  @default(true)
  color       String?  // Color for highlighting

  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  matches     KeywordMatch[]

  @@unique([userId, term])
}

// Track which articles match which keywords
model KeywordMatch {
  id        String   @id @default(cuid())

  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  keywordId String
  keyword   Keyword  @relation(fields: [keywordId], references: [id], onDelete: Cascade)

  matchedIn String   // "title", "description", or "content"

  createdAt DateTime @default(now())

  @@unique([articleId, keywordId])
  @@index([keywordId])
}

// User settings
model Settings {
  id        String   @id @default(cuid())
  darkMode  Boolean  @default(false)

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Company favorites (bolagsinfo)
model CompanyFavorite {
  id        String   @id @default(cuid())
  orgNumber String   // Organization number (e.g., "5591234567")
  name      String   // Company name for display

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, orgNumber])
  @@index([userId])
}

// Search history (bolagsinfo)
model SearchHistory {
  id        String   @id @default(cuid())
  query     String   // Search query or org number
  type      String   // "company" or "search"
  name      String?  // Company name if type is "company"

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

// ==========================================
// Bevakningslista (Watchlist)
// ==========================================

// Companies in the watchlist (Loop Tools coverage area)
model WatchedCompany {
  id        String   @id @default(cuid())
  orgNumber String   @unique // Organization number (e.g., "5591234567")
  name      String   // Company name
  hasLogo   Boolean  @default(false) // Whether a logo exists
  category  String?  // Optional category/industry
  notes     String?  // Optional notes about the company

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([orgNumber])
}
