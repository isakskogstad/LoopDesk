# Nyhetsflödet Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Database (Required for production)
# ===================

# PostgreSQL connection string
# For Neon: postgresql://user:pass@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
# For Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
# For Railway: postgresql://postgres:pass@xxx.railway.app:5432/railway
DATABASE_URL=postgresql://user:password@localhost:5432/nyhetsflödet

# Direct connection URL (for Prisma migrations, same as DATABASE_URL for most providers)
DIRECT_URL=postgresql://user:password@localhost:5432/nyhetsflödet

# ===================
# RSSHub Configuration (Optional)
# ===================

# Self-hosted RSSHub instance URL
# Leave empty to use public instances (rsshub.rssforever.com, etc.)
RSSHUB_URL=

# Access key for your RSSHub instance
RSSHUB_ACCESS_KEY=

# ===================
# Social Media Credentials (Optional - for self-hosted RSSHub)
# ===================

# Twitter/X
TWITTER_USERNAME=
TWITTER_PASSWORD=
TWITTER_AUTH_TOKEN=

# Instagram
IG_USERNAME=
IG_PASSWORD=

# GitHub (increases rate limits)
GITHUB_ACCESS_TOKEN=

# ===================
# App Configuration
# ===================
NODE_ENV=production
