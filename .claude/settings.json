    "MAX_MCP_OUTPUT_TOKENS": "10000",
    "BASH_MAX_OUTPUT_LENGTH": "8000"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
